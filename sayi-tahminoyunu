import random

dogru_sayi = random.randint(1, 100)
alt_sinir=1
ust_sinir=100
deneme_sayisi=0


def kullanici_tahmini_al():
    pass


def sayitahmin_oyunu():
    global dogru_sayi,alt_sinir,ust_sinir,deneme_sayisi
    print("1 ile 100 arasında bir sayıyı doğru tahmin etmeye çalışın")
    print("Daha az tahminde doğru sayıya ulaş ve en yüksek puanı al")
    while True:
        try:
            tahmin= kullanici_tahmini_al()
            deneme_sayisi+=1
            if tahmin<dogru_sayi:
                global alt_sinir
                alt_sinir=max(alt_sinir,tahmin + 1)
                print(f"Daha büyük bir sayı girin!({alt_sinir}ile{ust_sinir}arasında)")
            elif tahmin>dogru_sayi:
                 global ust_sinir
                 ust_sinir= min(ust_sinir, tahmin - 1)
                 print(f"Daha küçük bir sayı girin! ({alt_sinir} ile {ust_sinir} arasında)")
            else:
                 print(f"Tebrikler! Sayıyı doğru tahmin ettiniz! Doğru sayı: {dogru_sayi}")
                 print(f"{deneme_sayisi} denemede buldunuz.")
                 break
            yakinlik_mesaji(dogru_sayi, tahmin)
        except ValueError as e:
        print(f"Hata: {e}. Lütfen geçerli bir tahminde bulunun.")


